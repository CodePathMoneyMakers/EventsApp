<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Widget.Theme.EventsApp.ActionBar.Fullscreen" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="Widget.Theme.EventsApp.ButtonBar.Fullscreen" parent="">
        <item name="android:background">@color/black_overlay</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="PopupMenu" parent="@android:style/Widget.PopupMenu">
        <item name="android:popupBackground">#ffffff</item>
    </style>

    <style name="expandedBarTextStyle" parent="Theme.AppCompat">
        <item name="android:textSize">0sp</item>
        <item name="android:textColor">@android:color/transparent</item>
    </style>
    
    <style name="CustomTabStyle" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="custom_Fab">
        <item name="android:background">@drawable/label_back</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Widget.App.ButtonStyle"
        parent="Widget.MaterialComponents.Button">
        <item name="materialThemeOverlay">@style/ButtonThemeOverlay</item>

    </style>

    <style name="Widget.App.ButtonStyle1"
        parent="Widget.MaterialComponents.Button">
        <item name="materialThemeOverlay">@style/ButtonThemeOverlay1</item>

    </style>

    <style name="ButtonThemeOverlay">
        <item name="colorPrimary">@color/white</item>
        <item name="android:textColor">@color/red</item>
    </style>

    <style name="ButtonThemeOverlay1">
        <item name="colorPrimary">@color/red</item>
        <item name="android:textColor">@color/white</item>
    </style>

</resources>