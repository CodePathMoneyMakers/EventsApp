<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">


    <ImageButton
        android:id="@+id/btnSignOut"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="385dp"
        android:layout_marginTop="33dp"
        android:layout_marginEnd="5dp"
        android:background="#00FFFFFF"
        android:elevation="10dp"
        android:src="@drawable/ic_logout" />

    <ImageButton
        android:id="@+id/btnEdit"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="59dp"
        android:layout_marginEnd="6dp"
        android:background="@drawable/transparent_bg"
        android:elevation="10dp"
        android:src="@drawable/ic_edit" />

    <TextView
        android:id="@+id/tvEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="320dp"
        android:layout_marginTop="10dp"
        android:elevation="0dp"
        android:text="Email Address: "
        android:textSize="12dp" />


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/profileBackground"
            android:layout_width="match_parent"
            android:layout_height="12dp"
            android:adjustViewBounds="false"
            android:cropToPadding="false"
            android:scaleType="centerCrop"
            android:src="@drawable/loginback"/>
           <!-- android:foreground="@drawable/profile_gradient_overlay"
           -->
        <View
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:layout_gravity="bottom"
            android:background="@drawable/fade_image_background"/>
    </FrameLayout>


    <androidx.cardview.widget.CardView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/cardProfileImage"
        android:layout_marginStart="160dp"
        android:layout_marginTop="60dp"
        app:cardElevation="100dp"
        app:cardCornerRadius="50dp"
        >

        <ImageView
            android:id="@+id/ivProfileImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:srcCompat="@tools:sample/avatars" />

    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:layout_width="350dp"
        android:layout_height="220dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="110dp"
        android:layout_marginEnd="30dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="5dp"
        android:id="@+id/profileCard"
        android:fadingEdgeLength="@dimen/cardview_default_elevation">

        <TextView
            android:id="@+id/tvFullName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:layout_marginEnd="0dp"
            android:layout_gravity="center"
            android:alpha="0.75"
            android:elegantTextHeight="true"
            android:fontFamily="@font/amaranth_bold"
            android:lineSpacingExtra="10sp"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="18sp"
            android:typeface="sans"
            tools:text="Maria Elliott"
            />

        <TextView
            android:id="@+id/tvAge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="230dp"
            android:layout_marginTop="77dp"
            android:textStyle="bold"
            tools:text="25" />

        <EditText
            android:id="@+id/etBio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/login_et_background"
            android:hint="Tell us about yourself!"
            android:inputType="textMultiLine"
            android:textSize="14sp">

        </EditText>

        <TextView
            android:id="@+id/tvAttended"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="70dp"
            android:layout_marginTop="140dp"
            android:alpha="0.90"
            android:fontFamily="@font/amaranth_bold"
            android:lineSpacingExtra="10sp"
            android:text="ATTENDED"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textSize="12sp"
            android:typeface="monospace" />

        <TextView
            android:id="@+id/tvEventsCreated"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="220dp"
            android:layout_marginTop="140dp"
            android:alpha="0.90"
            android:fontFamily="@font/amaranth_bold"
            android:text="EVENTS CREATED"
            android:textSize="12sp" />



        <TextView
            android:id="@+id/numAttending"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvAttended"
            android:layout_marginTop="160dp"
            android:layout_marginStart="90dp"
            android:text="0" />

        <TextView
            android:id="@+id/numCreated"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvAttended"
            android:layout_marginTop="160dp"
            android:layout_marginStart="260dp"
            android:text="0" />

    </androidx.cardview.widget.CardView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/profileRecycler"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_below="@+id/profileCard"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="2dp"
        android:fadingEdge="vertical"
        android:fadingEdgeLength="10dp"
        android:requiresFadingEdge="vertical"
        android:paddingTop="10dp"/>

</RelativeLayout>