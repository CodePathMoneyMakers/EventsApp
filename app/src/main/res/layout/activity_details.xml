<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/coordinator"
    android:background="@drawable/details_back"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_scrollFlags="scroll|snap|exitUntilCollapsed"
            app:expandedTitleTextAppearance="@style/expandedBarTextStyle"
            app:contentScrim="#000000">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/eventImage"
                    android:layout_width="match_parent"
                    android:layout_height="432dp"
                    android:fitsSystemWindows="true"
                    android:scaleType="centerCrop"
                    app:layout_collapseMode="parallax"
                    android:foreground="@drawable/fade_details_activity"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="370dp"
                    android:layout_gravity="bottom"
                    android:alpha="0.2"
                    android:foreground="@drawable/fade_details_activity" />

            </FrameLayout>


        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>


    <RelativeLayout
        android:id="@+id/layout_bottom"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/relative_layout_anchored"
        android:layout_gravity="bottom"
        app:layout_anchorGravity="bottom"
        >

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buyTicket"
            android:layout_width="110dp"
            android:layout_height="40dp"
            android:layout_marginStart="160dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/btn_background"
            android:text="@string/rsvp"
            android:textColor="@color/white"
            android:textStyle="bold" />
<!--            style="@style/Widget.App.ButtonStyle"-->


        <Button
            android:id="@+id/joinChatroomBtn"
            android:layout_width="110dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="16dp"
            android:layout_marginTop="12dp"
            android:text="Chat"
            android:textColor="#FFFFFF"
            android:background="@drawable/btn_background"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/eventFee2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="25dp"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:text="eventFee" />

    </RelativeLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/relative_layout_back"
        android:elevation="-10dp"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

        <RelativeLayout
            android:id="@+id/relative_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="-10dp">

            <TextView
                android:id="@+id/eventDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/eventTitle"
                android:layout_marginStart="20dp"
                android:layout_marginTop="25dp"
                android:drawablePadding="10dp"
                android:textColor="@color/white"
                android:textSize="18sp"
                app:drawableStartCompat="@drawable/ic_calendar_white"
                tools:text="eventDate" />

            <TextView
                android:id="@+id/eventGenre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/eventLocation"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:drawablePadding="10dp"
                android:textColor="@color/white"
                android:textSize="18sp"
                app:drawableStartCompat="@drawable/ic_music_white"
                tools:text="eventGenre" />

            <TextView
                android:id="@+id/eventFee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/eventGenre"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:drawablePadding="10dp"
                android:textColor="@color/white"
                android:textSize="18sp"
                app:drawableStartCompat="@drawable/ic_ticket_white"
                tools:text="eventFee">

            </TextView>

            <TextView
                android:id="@+id/eventOrganization"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/eventFee"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:drawablePadding="10dp"
                android:textColor="@color/white"
                android:textSize="18sp"
                app:drawableStartCompat="@drawable/ic_organization_white"
                tools:text="eventOrganization">

            </TextView>

            <TextView
                android:id="@+id/eventTime1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/eventTitle"
                android:layout_marginStart="3dp"
                android:layout_marginTop="25dp"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:layout_toEndOf="@+id/eventTime"
                tools:text="eventTime1" />

            <TextView
                android:id="@+id/eventTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/eventTitle"
                android:layout_marginStart="210dp"
                android:layout_marginTop="25dp"
                android:drawablePadding="10dp"
                android:textColor="@color/white"
                android:textSize="18sp"
                tools:text="eventTime" />

            <TextView
                android:id="@+id/eventLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/eventDate"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:drawablePadding="10dp"
                android:textColor="@color/white"
                android:textSize="18sp"
                app:drawableStartCompat="@drawable/ic_baseline_location_on_24"
                tools:text="eventLocation" />


            <TextView
                android:id="@+id/eventTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="19dp"
                android:layout_marginBottom="0dp"
                android:textColor="#FFFFFF"
                android:textSize="25sp"
                android:textStyle="bold"
                tools:text="Saturday Nights at Danny's" />

            <RelativeLayout
                android:id="@+id/bottom_layout"
                android:layout_width="match_parent"
                android:layout_height="620dp"
                android:layout_below="@+id/eventOrganization"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="38dp"
                android:layout_marginEnd="0dp"
                android:background="@drawable/relative_back_white">


                <TextView
                    android:id="@+id/details"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="27dp"
                    android:layout_marginTop="30dp"
                    android:text="Details"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold" />


                <!--                        <ImageButton-->
                <!--                            android:id="@+id/btn_expand"-->
                <!--                            android:layout_width="70dp"-->
                <!--                            android:layout_height="36dp"-->
                <!--                            android:layout_below="@+id/eventDescription"-->
                <!--                            android:layout_alignParentStart="true"-->
                <!--                            android:layout_marginStart="20dp"-->
                <!--                            android:layout_marginTop="10dp"-->
                <!--                            android:background="@drawable/transparent_bg"-->
                <!--                            android:src="@drawable/ic_read_more"-->
                <!--                            android:contentDescription="@string/readmore" />-->


                <!--                        <TextView-->
                <!--                            android:id="@+id/eventDescription"-->
                <!--                            android:layout_width="339dp"-->
                <!--                            android:layout_height="wrap_content"-->
                <!--                            android:layout_alignParentStart="true"-->
                <!--                            android:layout_marginStart="27dp"-->
                <!--                            android:layout_marginTop="90dp"-->
                <!--                            android:layout_marginEnd="10dp"-->
                <!--                            android:textColor="#616368"-->
                <!--                            android:textSize="18sp"-->
                <!--                            tools:text="eventDescription" />-->

                <com.ms.square.android.expandabletextview.ExpandableTextView
                    xmlns:expandableTextView="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/expand_text_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="27dp"
                    android:layout_marginTop="50dp"
                    expandableTextView:animDuration="200"
                    expandableTextView:maxCollapsedLines="4">

                    <TextView
                        android:id="@id/expandable_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginRight="10dp"
                        android:textColor="#666666"
                        android:textSize="16sp" />

                    <ImageButton
                        android:id="@id/expand_collapse"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|bottom"
                        android:background="@android:color/transparent"
                        android:padding="16dp" />
                </com.ms.square.android.expandabletextview.ExpandableTextView>


                <androidx.cardview.widget.CardView
                    android:id="@+id/mapCard"
                    android:layout_width="362dp"
                    android:layout_height="144dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="190dp"
                    android:layout_marginEnd="16dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="10dp">

                    <com.google.android.gms.maps.MapView
                        android:id="@+id/mapView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/Organizer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/mapCard"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="50dp"
                    android:text="Organizer"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/eventOrganizer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/Organizer"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="30dp"
                    android:layout_toRightOf="@+id/cardProfileImage"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    tools:text="eventOrganizer" />


                <TextView
                    android:id="@+id/userBio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/eventOrganizer"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@+id/cardProfileImage"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    tools:text="userBio" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardProfileImage"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_below="@id/Organizer"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="20dp"
                    app:cardCornerRadius="50dp"
                    app:cardElevation="10dp">

                    <ImageView
                        android:id="@+id/userImage"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        tools:srcCompat="@tools:sample/avatars" />

                </androidx.cardview.widget.CardView>


            </RelativeLayout>



        </RelativeLayout>


    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
