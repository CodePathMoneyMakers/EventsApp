<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="175dp"
        android:layout_height="108dp"
        android:padding="5dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="60dp">

        <ImageView
            android:id="@+id/eventImage"
            android:layout_width="175dp"
            android:layout_height="107dp"
            android:foreground="@drawable/for_you_transparent"
            android:scaleType="centerCrop"
            tools:ignore="ContentDescription"
            tools:srcCompat="@drawable/building" />


        <TextView
            android:id="@+id/eventTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="110dp"
            android:layout_marginTop="125dp"
            android:fontFamily="@font/averia_libre_bold"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:textStyle="normal"
            tools:text="9PM" />

        <TextView
            android:id="@+id/eventDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="45dp"
            android:fontFamily="@font/averia_libre_bold"
            android:textColor="#FFFFFF"
            android:textSize="10sp"
            android:textStyle="normal"
            tools:text="FRIDAY MAR 12, " />

        <TextView
            android:id="@+id/eventTitle"
            android:layout_width="147dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="60dp"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:textStyle="bold"
            tools:text="Saturday Nights at Danny's" />

        <TextView
            android:id="@+id/eventGenre"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="80dp"
            android:alpha="0.7"
            android:drawableLeft="@drawable/ic_music_recycler2"
            android:drawablePadding="5dp"
            android:fontFamily="sans-serif-condensed-medium"
            android:textColor="#FFFFFF"
            android:textSize="10sp"
            android:typeface="sans"
            tools:text="Indie Rock" />

        <TextView
            android:id="@+id/eventFee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="90dp"
            android:layout_marginTop="80dp"
            android:alpha="0.7"
            android:drawableLeft="@drawable/ic_ticket_recycler2"
            android:drawablePadding="5dp"
            android:fontFamily="sans-serif-condensed-medium"
            android:textColor="#FFFFFF"
            android:textSize="10sp"
            android:typeface="sans"
            tools:text="$10" />

    </androidx.cardview.widget.CardView>



</RelativeLayout>