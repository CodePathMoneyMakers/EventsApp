<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        app:cardElevation="20dp"
        app:cardCornerRadius="11dp"
        android:id="@+id/cardViewHome"
        >

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/search_fade_background1"
            android:id="@+id/toolBar">


            <android.widget.SearchView
                android:id="@+id/inputSearch"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:elevation="11dp"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:layoutDirection="rtl"
                app:searchIcon="@drawable/ic_search2"
                android:goIcon="@drawable/ic_search2"/>

        </androidx.appcompat.widget.Toolbar>

        <TextView
            android:id="@+id/Home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="178dp"
            android:layout_marginTop="15dp"
            android:fontFamily="sans-serif-medium"
            android:text="@string/home"
            android:elevation="10dp"
            android:textColor="#373A42"
            android:textSize="18sp"
            android:textStyle="bold" />

    </androidx.cardview.widget.CardView>


<!--    <EditText-->
<!--        android:id="@+id/inputSearch1"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:hint="Search events"-->
<!--        android:layout_margin="20dp"-->
<!--        android:paddingLeft="20dp"-->
<!--        android:paddingTop="8dp"-->
<!--        android:paddingBottom="8dp"-->
<!--        android:elevation="11dp"-->
<!--        android:drawableRight="@drawable/ic_search2"-->
<!--        android:paddingRight="10dp"-->
<!--        android:background="@drawable/input_search"-->
<!--        android:visibility="invisible"/>-->
    <TextView
        android:id="@+id/yourEvents"
        android:layout_width="wrap_content"
        android:paddingLeft="20dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/inputSearch"
        android:alpha="0.90"
        android:fontFamily="@font/amaranth_bold"
        android:lineSpacingExtra="10sp"
        android:text="Your Events"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textSize="12sp"
        android:typeface="monospace" />

    <TextView
        android:id="@+id/Upcoming"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="100dp"
        android:elevation="10dp"
        android:fontFamily="sans-serif-medium"
        android:lineSpacingExtra="14sp"
        android:text="@string/upcoming"
        android:textColor="#373A42"
        android:textSize="28sp"
        android:textStyle="bold" />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_below="@+id/yourEvents"
        android:layout_width="match_parent"
        android:layout_height="138dp"
        android:paddingTop="8dp"
        android:id="@+id/horizontalView"
        android:visibility="visible"
        android:layout_marginBottom="8dp"
        />

    <TextView
        android:id="@+id/empty_view"
        android:layout_below="@id/inputSearch"
        android:layout_width="match_parent"
        android:padding="20dp"
        android:layout_height="138dp"
        android:gravity="center"
        android:visibility="invisible"
        android:text="You have not rsvp'd to any events. Check out the events below to see what's happening in your area!" />

    <TextView
        android:id="@+id/allEvents"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="240dp"
        android:paddingLeft="20dp"
        android:alpha="0.90"
        android:fontFamily="@font/amaranth_bold"
        android:lineSpacingExtra="10sp"
        android:text="All Events"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textSize="12sp"
        android:typeface="monospace" />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_below="@+id/allEvents"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/cardViewHome"
        android:layout_marginTop="70dp"
        android:fadingEdge="horizontal"
        android:fadingEdgeLength="15dp"
        android:padding="10dp"
        android:paddingTop="100dp"
        />

    <TextView
        android:id="@+id/Location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="90dp"
        android:layout_marginBottom="2dp"
        android:drawablePadding="10dp"
        android:fontFamily="@font/concert_one"
        android:textColor="#CACDD4"
        android:textStyle="bold"
        app:drawableLeftCompat="@drawable/ic_location_darkgrey"
        tools:text="Miami" />


</RelativeLayout>