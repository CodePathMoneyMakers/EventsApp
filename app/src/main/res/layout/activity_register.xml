    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:scaleX="1.212"
        android:scaleY="1.212"
        app:srcCompat="@drawable/loginback" />
    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone"
        />

    <TextView
        android:id="@+id/banner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:fontFamily="sans-serif-black"
        android:shadowColor="@color/teal_700"
        android:shadowRadius="30"
        android:text="L a n d m a r k"
        android:textAlignment="center"
        android:textColor="#BEF3F3F3"
        android:textSize="54sp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/tvUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/banner"
        android:layout_alignParentStart="true"
        android:layout_marginStart="42dp"
        android:layout_marginTop="32dp"
        android:fontFamily="sans-serif-medium"
        android:text="Username"
        android:textColor="#B8B8B8" />

    <EditText
        android:id="@+id/etUsername"
        android:layout_width="295dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="42dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="42dp"
        android:layout_below="@+id/tvUsername"
        android:background="@drawable/login_et_background"
        android:ems="10"
        android:paddingLeft="10dp"
        android:singleLine="true"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/tvAge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etUsername"
        android:layout_alignParentStart="true"
        android:layout_marginStart="42dp"
        android:layout_marginTop="20dp"
        android:fontFamily="sans-serif-medium"
        android:text="Age"
        android:textColor="#B8B8B8" />

    <EditText
        android:id="@+id/etAge"
        android:layout_width="295dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="42dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="42dp"
        android:layout_below="@+id/tvAge"
        android:background="@drawable/login_et_background"
        android:ems="10"
        android:paddingLeft="10dp"
        android:singleLine="true"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/tvEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="42dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/etAge"
        android:fontFamily="sans-serif-medium"
        android:text="Email"
        android:textColor="#B8B8B8" />

    <EditText
        android:id="@+id/etEmail"
        android:layout_width="295dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="42dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="42dp"
        android:layout_below="@+id/tvEmail"
        android:background="@drawable/login_et_background"
        android:ems="10"
        android:paddingLeft="10dp"
        android:singleLine="true"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/tvPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="42dp"
        android:layout_below="@+id/etEmail"
        android:layout_marginTop="20dp"
        android:fontFamily="sans-serif-medium"
        android:text="@string/password"
        android:textColor="#B8B8B8" />

    <EditText
        android:id="@+id/etPassword"
        android:layout_width="295dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="42dp"
        android:layout_marginEnd="42dp"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/tvPassword"
        android:background="@drawable/login_et_background"
        android:ems="10"
        android:inputType="textPassword"
        android:paddingLeft="10dp"
        android:singleLine="true"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/btnRegister"
        android:layout_width="169dp"
        android:layout_height="45dp"
        android:layout_below="@+id/etPassword"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="104dp"
        android:layout_marginEnd="104dp"
        android:layout_marginTop="64dp"
        android:background="@drawable/login_btn_background"
        android:includeFontPadding="false"
        android:text="Create Account"
        android:textColor="#FFFFFF" />

</RelativeLayout>