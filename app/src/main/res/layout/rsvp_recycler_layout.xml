<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="10dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardProfileImage"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="50dp"
        app:cardElevation="100dp">

        <ImageView
            android:id="@+id/ivProfileImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/building"
            app:srcCompat="@drawable/building"
            tools:srcCompat="@tools:sample/avatars" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tvFullName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_gravity="center"
        android:layout_marginStart="11dp"
        android:layout_marginTop="7dp"
        android:layout_toEndOf="@+id/cardProfileImage"
        android:alpha="0.75"
        android:elegantTextHeight="true"
        android:fontFamily="@font/amaranth_bold"
        android:lineSpacingExtra="10sp"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="14sp"
        android:typeface="sans"
        tools:text="Maria Elliott" />

    <TextView
        android:id="@+id/tvEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvFullName"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="320dp"
        android:layout_marginTop="2dp"
        android:layout_toEndOf="@+id/cardProfileImage"
        android:elevation="0dp"
        android:text="Email Address: "
        android:textSize="12dp" />

    <TextView
        android:id="@+id/eventTitle"
        android:layout_width="203dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="90dp"
        android:layout_marginTop="33dp"
        android:layout_toEndOf="@+id/tvFullName"
        android:textColor="#000000"
        android:textSize="12sp"
        android:textStyle="bold"
        tools:text="Saturday Nights at Danny's" />

    <TextView
        android:id="@+id/tvRsvp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="90dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/tvFullName"
        android:text="@string/rsvp_s_to"
        android:textStyle="bold"
        android:textColor="#FC1055"/>

</RelativeLayout>